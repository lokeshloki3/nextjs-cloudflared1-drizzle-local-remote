{
  "name": "nextjs-cloudflared1-drizzle-local-remote",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "wrangler d1 migrations apply DB --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote",
    "db:studio:dev": "cross-env DB_LOCAL_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio --port 3094",
    "db:studio:prod": "drizzle-kit studio --port 3098",
    "build": "next build",
    "dev": "next dev",
    "pages:build": "npm next-on-pages",
    "pages:dev": "npm pages:build && npm wrangler pages dev --port=3000",
    "pages:deploy": "npm pages:build && npm wrangler pages deploy"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.10",
    "next": "15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "server-only": "^0.0.1",
    "superjson": "^2.2.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.7",
    "@cloudflare/workers-types": "^4.20241224.0",
    "@eslint/eslintrc": "^3",
    "@t3-oss/env-nextjs": "^0.11.1",
    "better-sqlite3": "^11.7.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.23.0",
    "drizzle-orm": "^0.31.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "wrangler": "^3.99.0"
  },
  "engines": {
    "node": "20.17.0"
  }
}
